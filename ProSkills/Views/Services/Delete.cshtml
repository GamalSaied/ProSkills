@model ProSkills.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "Delete Service";
}

<h2>Delete Service</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Instructor Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VendorName)
        </dd>
    </dl>

    <form asp-action="SoftDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" method ="post" class="btn btn-secondary">Cancel</a>
    </form>
</div>
