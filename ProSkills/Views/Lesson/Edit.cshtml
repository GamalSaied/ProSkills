@model ProSkills.Models.ClientSide.Lesson

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-body">
    <h2>Edit Lesson</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>
        <div class="form-group">
            <label for="Content">Content</label>
            <textarea class="form-control" id="Content" name="Content">@Model.Content</textarea>
        </div>
        <div class="form-group">
            <label for="downloadLink">Download Link</label>
            <input type="url" class="form-control" id="downloadLink" name="downloadLink" value="@Model.downloadLink" />
        </div>
        <div class="form-group">
            <label for="TaskLink">Task Link</label>
            <input type="url" class="form-control" id="TaskLink" name="TaskLink" value="@Model.TaskLink" />
        </div>
        <div class="form-group">
            <label for="Time">Time (HH:MM:SS)</label>
            <input type="text" class="form-control" id="Time" name="Time" value="@Model.Time?.ToString(@"hh\:mm\:ss")" required />
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="ChapterId" value="@Model.ChapterId" />
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
