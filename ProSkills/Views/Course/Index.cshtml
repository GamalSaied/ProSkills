@model List<ProSkills.Models.ClientSide.Course>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    int instructorId = ViewBag.InstructorID; // Get Instructor ID Again  From Controler
}
@*


lazm 3lshan el paging yesht3'l wel header en el data ely fel title column t7teha data 2dha fel row *@
<!-- /.card-header --> <!-- Henaa Lazm a7ot kolo fe div wa7da awel ma tft7 el html 3lshan mat3mlsh gab w b3den 7ot feha kol haga b2a 3lshan el7gat ba5od melparent -->
<div class="card-body">
    <form action="/Course/New" method="post">
        <input type="hidden" id="instructorId" name="instructorId" value="@instructorId" />
        <button type="submit" class="btn btn-info btn-block btn-flat" style="margin-bottom:10px;">Submit</button>
    </form>
</div>
<!-- --------------------------------------------------------------------------------------------------------------->

   


    <table id="example1" class="table table-bordered table-striped">
        <!-- Columns Head -->
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Number of Trainees</th>
            <th scope="col">Number of Lessons</th>
            <th scope="col">Number of Assessments</th>
            <th scope="col">Trainees</th>
            <th scope="col">Profile</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 1;
            }
        @foreach (var course in Model)
        {
            if (course != null && !course.IsDeleted)
            {
                <tr>
                    <th scope="row">@counter</th>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td>@course.NumberOfTrainees</td>
                    <td>@course.NumberOfLessons</td>
                    <td>@course.NumberOfAssessment</td>
                    <td><a href="/Course/TraineesInCourse?courseId=@course.Id">Trainees</a></td>
                    <td><a href="/instructor/GetByID?ID=@course.Id">Profile</a></td>
                    <td><a href="/instructor/Edit?ID=@course.Id" class="btn btn-block bg-gradient-secondary btn-xs">Edit</a></td>
                    <td><a href="/instructor/SoftDelete?ID=@course.Id" class="btn btn-block bg-gradient-danger btn-xs" onclick="return confirm('Are you sure you want to delete?')">Delete</a></td>
                </tr>
                counter++;
            }
        }
            }
        </tbody>
    </table>
</div>


