@model List<ProSkills.Models.ClientSide.Trainee>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var courseName = ViewBag.CourseName;
}

<div class="card-body">
    <h2>@courseName - Trainees</h2>
    <div>
        <a href="/Trainee/AddNew" class="btn btn-info btn-block btn-flat" style="margin-bottom:10px;">New</a>
    </div>

    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">CoursesClientSide</th>
                <th scope="col">Profile</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 1;
            }
            @foreach (var item in Model)
            {
                if (item != null && !item.IsDeleted)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td>
                        <td>@item.CreatedAt</td>
                        <td><a href="/Course/TraineeCourseList?traineeId=@item.Id">Courses</a></td>
                        <td><a href="/Trainee/GetByID?ID=@item.Id">Profile</a></td>
                        <td><a href="/Trainee/Edit?ID=@item.Id" class="btn btn-block bg-gradient-secondary btn-xs">Edit</a></td>
                        <td><a href="/Trainee/SoftDelete?ID=@item.Id" class="btn btn-block bg-gradient-danger btn-xs" onclick="return confirm('Are you sure you want to delete?')">Delete</a></td>
                    </tr>
                    counter++;
                }
            }
        </tbody>
    </table>
</div>
