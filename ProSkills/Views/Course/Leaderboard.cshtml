@model List<LeaderboardViewModel>
@{
    ViewBag.Title = "Leaderboard";
}

<h2>@ViewBag.CourseName - Leaderboard</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#Rank</th>
            <th>Profile Picture</th>
            <th>Full Name</th>
            <th>Level</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Rank</td>
                <td>
                    <img src="@item.ProfilePictureUrl" alt="Profile Picture" class="img-circle" style="width: 50px; height: 50px;" />
                </td>
                <td>@item.FullName</td>
                <td>@item.Level</td>
                <td>@item.Points</td>
            </tr>
        }
    </tbody>
</table>
