@model PagedLeaderboardViewModel

@{
    ViewBag.Title = "Leaderboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            margin: 0;
            text-align: left;
            color: #525f7f;
            background-color: #f8f9fe;
        }

        .container {
            width: 100%;
            margin-right: auto;
            margin-left: auto;
            padding-right: 15px;
            padding-left: 15px;
        }

        .mt-7 {
            margin-top: 6rem !important;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            border: 1px solid rgba(0, 0, 0, .05);
            border-radius: .375rem;
            background-color: #fff;
            background-clip: border-box;
        }

        .card-header {
            margin-bottom: 0;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, .05);
            background-color: #fff;
            text-align: center;
        }

            .card-header h3 {
                font-family: 'Orbitron', sans-serif;
                font-size: 2.5rem;
                font-weight: 700;
                color: #007bff;
                border: 2px solid #007bff;
                padding: 10px 20px;
                display: inline-block;
                border-radius: 5px;
            }

        .card-body {
            padding: 1.5rem;
        }

        .card-footer {
            padding: 1.25rem 1.5rem;
            border-top: 1px solid rgba(0, 0, 0, .05);
            background-color: #fff;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: transparent;
        }

            .table th,
            .table td {
                padding: 1rem;
                vertical-align: middle;
                border-top: 1px solid #e9ecef;
                font-size: 1.25rem; /* Increased font size */
                font-family: 'Orbitron', sans-serif; /* Game-like font */
                color: #4a4a4a; /* Darker text color */
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #e9ecef;
                font-size: 1.5rem; /* Larger header text */
                font-family: 'Orbitron', sans-serif; /* Game-like font */
                color: #343a40; /* Darker header color */
            }

            .table .thead-light th {
                color: #8898aa;
                border-color: #e9ecef;
                background-color: #f6f9fc;
            }

        .table-responsive {
            display: block;
            overflow-x: auto;
            width: 100%;
            -webkit-overflow-scrolling: touch;
            -ms-overflow-style: -ms-autohiding-scrollbar;
        }

        .avatar {
            font-size: 1rem;
            display: inline-flex;
            width: 70px; /* Increased width */
            height: 70px; /* Increased height */
            color: #fff;
            border-radius: 50%;
            background-color: #adb5bd;
            align-items: center;
            justify-content: center;
        }

            .avatar img {
                width: 100%;
                border-radius: 50%;
            }

        .shadow {
            box-shadow: 0 0 2rem 0 rgba(136, 152, 170, .15) !important;
        }

        .rounded-circle {
            border-radius: 50% !important;
        }

        .d-flex {
            display: flex !important;
        }

        .align-items-center {
            align-items: center !important;
        }

        .mr-3 {
            margin-right: 1rem !important;
        }

        .mr-2 {
            margin-right: 0.5rem !important;
        }

        .progress {
            height: 1rem;
            overflow: hidden;
            font-size: .75rem;
            background-color: #e9ecef;
            border-radius: .375rem;
            vertical-align: baseline;
        }

        .progress-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            transition: width .6s ease;
        }

        .bg-success {
            background-color: #2dce89 !important;
        }

        .bg-info {
            background-color: #11cdef !important;
        }

        .bg-warning {
            background-color: #fb6340 !important;
        }

        .bg-danger {
            background-color: #f5365c !important;
        }

        .highlight {
            background-color: #343a40 !important;
            color: #f8f9fa;
        }

            .highlight td {
                color: #f8f9fa;
            }

        .rank-circle {
            display: inline-block;
            width: 3.5rem; /* Increased width */
            height: 3.5rem; /* Increased height */
            line-height: 3.5rem; /* Adjusted line-height */
            border-radius: 50%;
            background-color: #007bff;
            color: #fff;
            text-align: center;
            font-size: 1.5rem; /* Keep font size same */
            font-weight: bold;
        }

        .highlight .rank-circle {
            background-color: #ffc107;
            color: #343a40;
        }

        .level-text {
            font-family: 'Pacifico', cursive;
            font-size: 2rem; /* Larger font size for Level */
            color: #007bff; /* Color for Level text */
        }

        .column-text {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.25rem;
            color: #4a4a4a;
        }

        .your-stats {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.25rem;
            font-weight: bold;
            color: #007bff;
            border-bottom: 2px solid #007bff;
            display: inline-block;
            margin-bottom: 1rem;
        }

        .rank-circle.top-1 {
            background-color: #ff0000; /* Bright Red */
            color: #fff;
        }

        .rank-circle.top-2 {
            background-color: darkviolet;
            color: #fff;
        }

        .rank-circle.top-3 {
            background-color: blue;
            color: #fff;
        }

        .rank-circle.top-10 {
            background-color: darkturquoise; /* Blue */
            color: white;
        }

    </style>
</head>
<body>

    <div class="container mt-7">
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <h3 class="mb-0 leaderboard-title">Leaderboard</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            @if (Model.CurrentUser != null)
                            {
                                <div class="your-stats">
                                    <h1 style="font-type:Bold"> Your Stats</h1>
                                    <h4> ==============</h4>                                    <p><strong>Rank:</strong> #@Model.CurrentUser.Rank</p>
                                    <p><strong>Points:</strong> @Model.CurrentUser.Points</p>
                                    <p><strong>Level:</strong> <span class="level-text">@Model.CurrentUser.Level</span></p>
                                    <p><strong>Completion:</strong> <span class="level-text">@Model.CurrentUser.CompletionPercentage%</span></p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">#Rank</th>
                                    <th scope="col">Profile Picture</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Level</th>
                                    <th scope="col">Points</th>
                                    <th scope="col">Completion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Leaderboard)
                                {
                                    <tr class="@(item.Email == Model.CurrentUser?.Email ? "highlight" : "")">
                                        <td>
                                            @if (item.Rank <= 3)
                                            {
                                                <div class="rank-circle top-@item.Rank">#@item.Rank</div>
                                            }
                                            else if (item.Rank <= 10)
                                            {
                                                <div class="rank-circle top-10">#@item.Rank</div>
                                            }
                                            else
                                            {
                                                @item.Rank
                                            }
                                        </td>
                                        <td>
                                            <img src="@item.ProfilePictureUrl" class="avatar rounded-circle mr-3" alt="@item.FullName" />
                                        </td>
                                        <td class="column-text">@item.FullName</td>
                                        <td class="level-text">@item.Level</td>
                                        <td class="column-text">@item.Points</td>
                                        <td class="column-text">
                                            <div class="d-flex align-items-center">
                                                <span class="mr-2">@item.CompletionPercentage%</span>
                                                <div class="progress" style="width: 100%;">
                                                    <div class="progress-bar @GetProgressBarColor(item.CompletionPercentage)" role="progressbar" aria-valuenow="@item.CompletionPercentage" aria-valuemin="0" aria-valuemax="100" style="width: @item.CompletionPercentage%;"></div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-end mb-0">
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?CourseId=@ViewBag.CourseId&page=@i">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @functions {
        private string GetProgressBarColor(int completionPercentage)
        {
            if (completionPercentage >= 90)
                return "bg-success";
            if (completionPercentage >= 70)
                return "bg-info";
            if (completionPercentage >= 50)
                return "bg-warning";
            return "bg-danger";
        }
    }

</body>
</html>
