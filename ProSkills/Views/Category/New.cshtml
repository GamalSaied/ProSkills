@model ProSkills.Models.ClientSide.Category

@{
    ViewData["Title"] = "New";
}

<h1>New</h1>

<div class="row">
    <div class="col-md-4">
        <form action="/Category/SaveNew" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="Image" class="col-sm-2 col-form-label"> Image</label>
                <input type="file" asp-for="Image" class="form-control" placeholder="Choose image" accept="image/*"><br><br>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
