@model ProSkills.Models.ApplicationUser

@if (Model != null)
{
    <div class="dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" alt="User Image" class="rounded-circle" width="30" height="30">
            }
            @Model.FullName
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="/Account/Programs"><i class="fa fa-book me-2"></i>My Courses</a></li>
            <li><a class="dropdown-item" href="/Account/Assignments"><i class="fa fa-tasks me-2"></i>My Assignments</a></li>
            <li><a class="dropdown-item" href="/Account/Profile"><i class="fa fa-user me-2"></i>My Profile</a></li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link p-0"><i class="fa fa-sign-out-alt me-2"></i>Log out</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <a asp-controller="Account" asp-action="Login" class="nav-item nav-link active"><i class="fa fa-sign-in-alt me-2"></i>Login</a>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block"><i class="fa fa-user-plus me-2"></i>Join Us<i class="fa fa-arrow-right ms-3"></i></a>
}
