<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>AEC University</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <link href="img/favicon.ico" rel="icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/ThemeFront/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/ThemeFront/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/ThemeFront/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/ThemeFront/css/style.css" rel="stylesheet">
    <link href="~/css/Register.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <style>
        .navbar .dropdown-menu {
            right: 0;
            left: auto;
        }

            .navbar .dropdown-menu::before {
                content: "";
                display: block;
                position: absolute;
                top: -10px;
                right: 12px;
                width: 12px;
                height: 12px;
                transform: rotate(45deg);
                background-color: white;
            }

        .nav-link.active {
            color: #007bff;
        }
    </style>
    @RenderSection("Styles", required: false)

</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="~/Home/Index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-book me-3"></i>AEC University</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="~/Home/About" class="nav-item nav-link @(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")">
                    <i class="fa fa-info-circle me-2"></i>About
                </a>
                <a href="~/Home/Courses" class="nav-item nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Courses" ? "active" : "")">
                    <i class="fa fa-book-open me-2"></i>Courses
                </a>
                <a href="~/Course/Cards" class="nav-item nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Cards" ? "active" : "")">
                    <i class="fa fa-book me-2"></i>Courses
                </a>
                <a href="~/Services/Index" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Services" ? "active" : "")">
                    <i class="fa fa-concierge-bell me-2"></i>Services
                </a>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle @(new[] { "Team", "Testimonial", "Error" }.Contains(ViewContext.RouteData.Values["action"].ToString()) ? "active" : "")" data-bs-toggle="dropdown">
                        <i class="fa fa-file-alt me-2"></i>Pages
                    </a>
                    <div class="dropdown-menu fade-down m-0">
                        <a href="~/Home/Team" class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Team" ? "active" : "")">
                            <i class="fa fa-users me-2"></i>Our Team
                        </a>
                        <a href="~/Home/Testimonial" class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Testimonial" ? "active" : "")">
                            <i class="fa fa-comments me-2"></i>Testimonial
                        </a>
                        <a href="~/Home/Error" class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Error" ? "active" : "")">
                            <i class="fa fa-exclamation-triangle me-2"></i>404 Page
                        </a>
                    </div>
                </div>
                <a href="~/Home/Contact" class="nav-item nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")">
                    <i class="fa fa-envelope me-2"></i>Contact
                </a>
                <!-- Add your button here -->
                <a href="~/Course/Leaderboard?CourseId=1" class="nav-item nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Leaderboard" ? "active" : "")">
                    <i class="fa fa-trophy me-2"></i>Leaderboard
                </a>
            </div>
        </div>
        <div class="d-flex align-items-center">
            @await Component.InvokeAsync("User")
        </div>
    </nav>

    @RenderBody()

    <footer>
        <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h4 class="text-white mb-3">Quick Link</h4>
                        <a class="btn btn-link" href="">About Us</a>
                        <a class="btn btn-link" href="">Contact Us</a>
                        <a class="btn btn-link" href="">Privacy Policy</a>
                        <a class="btn btn-link" href="">Terms & Condition</a>
                        <a class="btn btn-link" href="">FAQs & Help</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="text-white mb-3">Contact</h4>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>ITI, Cairo, Egypt</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+012 345 67890</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>aecuniversity44@gmail.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="text-white mb-3">Gallery</h4>
                        <div class="row g-2 pt-2">
                            <div class="col-4">
                                <img class="img-fluid bg-light p-1" src="~/ThemeFront/img/course-1.jpg" alt="">
                            </div>
                            <div class="col-4">
                                <img class="img-fluid bg-light p-1" src="~/ThemeFront/img/course-2.jpg" alt="">
                            </div>
                            <div class "col-4">
                                <img class="img-fluid bg-light p-1" src="~/ThemeFront/img/course-3.jpg" alt="">
                            </div>
                            <div class="col-4">
                                <img class="img-fluid bg-light p-1" src="~/ThemeFront/img/course-2.jpg" alt="">
                            </div>
                            <div class="col-4">
                                <img class="img-fluid bg-light p-1" src="~/ThemeFront/img/course-3.jpg" alt="">
                            </div>
                            <div class="col-4">
                                <img class="img-fluid bg-light p-1" src="~/ThemeFront/img/course-1.jpg" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="text-white mb-3">Newsletter</h4>
                       
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control border-0 w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                            <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" href="#">AEC University</a>, All Right Reserved.
                            Designed By <a class="border-bottom" href="https://htmlcodex.com">HTML Codex</a>
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <div class="footer-menu">
                                <a href="">Home</a>
                                <a href="">Cookies</a>
                                <a href="">Help</a>
                                <a href="">FQAs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ThemeFront/lib/wow/wow.min.js"></script>
    <script src="~/ThemeFront/lib/easing/easing.min.js"></script>
    <script src="~/ThemeFront/lib/waypoints/waypoints.min.js"></script>
    <script src="~/ThemeFront/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/ThemeFront/js/main.js"></script>

    <!-- Include jQuery Validation and Unobtrusive Validation scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/ThemeFront/js/main.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
