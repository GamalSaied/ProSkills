@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-body {
        padding: 2rem;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .card-text {
        font-size: 1rem;
    }
</style>
<meta http-equiv="refresh" content="2;url=@Url.Action("Login", "Account")" />

<div class="container" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2>Reset Password</h2>
                    <p>Your password has been reset. Please <a asp-action="Login">log in</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>


