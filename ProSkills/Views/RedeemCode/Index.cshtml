@model List<ProSkills.Models.ClientSide.RedeemCode>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card-body">
    <div>
        <a href="/RedeemCode/New" class="btn btn-info btn-block btn-flat" style="margin-bottom:10px;">New</a>
    </div>


    <table id="example1" class="table table-bordered table-striped">
        <!-- Columns Head -->
        <thead>
            <tr>

                <th scope="col">ID</th>
                <th scope="col">PackageName</th>
                <th scope="col">Code</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">isAvalible</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                @if (item != null)
                {
                    @if (item.IsDeleted == false)
                    {


                        <tr>

                            <td>@item.Id</td>
                            <td>@item.PackageName</td>
                            <td>@item.Code</td>
                            <td>@item.CreatedAt</td>
                            <td>@item.isAvalible</td>
                           
                            <td><a style="padding-bottom:10px" href="/RedeemCode/Edit?id=@item.Id" class="btn btn-block bg-gradient-secondary btn-xs">Edit</a></td>
                            @*    <td><a href="/Category/Delete?id=@item.Id" class="btn btn-block bg-gradient-danger btn-xs" onclick="return confirm('Are you sure you want to delete?')">Delete</a></td> *@
                            <td>

                                <form method="post" action="/RedeemCode/Delete/@item.Id" onsubmit="return confirm('Are you sure you want to delete?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>


                    }
                }
            }
        </tbody>
    </table>
</div>

